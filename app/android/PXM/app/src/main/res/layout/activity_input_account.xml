<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    tools:context="pxm.com.pxm.source.activities.InputAccountActivity"
    android:background="@drawable/bg_main">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/pxiaomiBlue">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&lt; 返回"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:id="@+id/cancle_input" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@color/pxiaomiBlue"
            android:text="输入账号"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_gravity="center_horizontal" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账号："
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="25dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:hint="手机号"
        android:background="@drawable/rectangle_02"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:inputType="phone"
        android:singleLine="true"
        android:textSize="16sp"
        android:id="@+id/input_account_mobile" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="确  定"
        android:textColor="#ffffff"
        android:background="@drawable/register_button_bg"
        android:textSize="16sp"
        android:id="@+id/account_confirm" />
</LinearLayout>
